void affiche_oled(const char* text) {
  if (!display.begin(SSD1306_SWITCHCAPVCC,  0x3C)) { //OLED_ADDR 0x3C
    //Si l'initialisation échoue, un message d'erreur est afficher sur le moniteur série
    Serial.println(F("SSD1306 allocation failed")); 
    for (;;);
  }

  display.display();
  delay(2000);

  display.clearDisplay(); //effacer l'OLED
  display.setTextSize(2); 
  display.setTextColor(WHITE);
  display.setCursor(0, 0); //au debut de l'OLED
  display.println(text); //le texte passé en argument
  display.display(); //affichage
  delay(2000);
}




